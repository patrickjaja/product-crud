{% extends 'base.html.twig' %}

{% set entity = app.request.attributes.get('_route')|split('_')|first|title %}

{% block title entity ~ ' Form' %}

{% block content %}
    <h1>{{ entity }}</h1>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <input type="submit" value="Submit" class="btn btn-primary" />

    {{ form_end(form) }}
{% endblock %}

